function setup {
	path_original="${PATH}"
	export PATH="${PATH}:."
}

function teardown {
	echo -e '\nOK'
	export PATH="${path_original}"
}

function assert_equals {
	if [[ "$1" == "$2" ]]; then
		echo -n '.'
	else
		local quem_me_chamou="${FUNCNAME[1]}"
		echo -e "F\n${quem_me_chamou}: Esperava [$1] mas obtive [$2]."
		exit 1
	fi
}

function assert_not_equals {
	if [[ "$1" != "$2" ]]; then
		echo -n '.'
	else
		local quem_me_chamou="${FUNCNAME[1]}"
		echo -e "F\n${quem_me_chamou}: [$1] deveria ser diferente de [$2]."
		exit 1
	fi
}

function assert_not_empty {
	if [[ -n "$1" ]]; then
		echo -n '.'
	else
		local quem_me_chamou="${FUNCNAME[1]}"
		echo -e "F\n${quem_me_chamou}: NÃ£o vazio."
		exit 1
	fi
}

