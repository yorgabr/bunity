function setup {
	the_path="${PATH}"
	export PATH="${PATH}:."
}

function teardown {
	echo -e '\nOK'
	export PATH="${the_path}"
}

function assert_equals {
	if [[ "$1" == "$2" ]]; then
		echo -n '.'
	else
		local who_called_me="${FUNCNAME[1]}"
		echo -e "F\n${who_called_me}: expected [$1], but got [$2]."
		exit 1
	fi
}
